<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
    </style>


    <!--位于右侧dialog的风格-->
    <style name="DialogRight" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!--点击dialog以外区域关闭弹窗-->
        <item name="android:windowCloseOnTouchOutside">true</item>

        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/dialog_right_animation</item>
    </style>

    <!--控制dialog从右面进出动画-->
    <style name="dialog_right_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_right</item>
        <!-- 进入时的动画 -->
        <item name="android:windowExitAnimation">@anim/dialog_right_out</item>
        <!-- 退出时的动画 -->
    </style>
</resources>
